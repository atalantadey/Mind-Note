<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Layout_delNoteContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_12sdp"
    android:background="@drawable/bg_dialog">
<ImageView
    android:id="@+id/iv_delNote"
    android:layout_width="@dimen/_25sdp"
    android:layout_height="@dimen/_25sdp"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:src="@drawable/baseline_delete_forever_24"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tint="@color/white" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="Delete Note"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_delNote"
        app:layout_constraintStart_toEndOf="@id/iv_delNote"
        app:layout_constraintTop_toTopOf="@id/iv_delNote"/>
    <TextView
        android:id="@+id/delNoteTxt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@null"
        android:gravity="center_vertical"
        android:text="Are you Sure you want to Delete this Note?"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/iv_delNote"
        android:paddingBottom="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/tv_delNotebtn"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:text="Delete Note"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:background="@color/colorDelete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delNoteTxt"
        />
    <TextView
        android:id="@+id/tv_Canceldel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_14sdp"
        android:text="@string/cancel"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_delNotebtn"
        app:layout_constraintTop_toBottomOf="@id/delNoteTxt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>